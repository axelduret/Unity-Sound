{% extends "head.twig" %}
{% block title %}
	<title>{{site_name}}
		-
		{{ ucWords(toLower(user_name)) }}
	</title>
{% endblock title %}
{% import "form.twig" as form %}
{% block content %}
	{{ registered_user() }}
	<div id="page">
		<section class="main-content col" role="main">
			{{ flash_alert() }}
			<div class="content-titleDiv">
				<div class="main-content-title">
					<h1>
						{{ ucWords(toLower(user_name)) }}&nbsp;{{ ucWords(toLower(current_page)) }}
					</h1>
				</div>
			</div>
			{% if user_role == '1' %}
				<div class="content-innerDiv" style="margin-bottom:1rem;">
					{{ include('adminAccount.twig') }}
				</div>
			{% elseif user_role == '2' %}
				<div class="content-innerDiv" style="margin-bottom:1rem;">
					{{ include('editorAccount.twig') }}
				</div>
			{% else %}
				<div class="content-innerDiv" style="margin-bottom:1rem;">
					{{ include('userAccount.twig') }}
				</div>
			{% endif %}
		</section>
	</div>
{% endblock %}
