{% extends "head.twig" %}
{% block title %}
	<title>{{site_name}}
		-
		{{ucFirst(current_page)}}</title>
{% endblock title %}
{% block content %}
	<div id="page">
		<section class="main-content col" role="main">
			{{flash_alert()}}
			<div class="content-titleDiv">
				<div class="main-content-title">
					<h1>
						Welcome
						{{ ucWords(toLower(user_name)) }}
					</h1>
				</div>
			</div>
			<div class="newsDiv">
				<div class="news-innerDiv">
					<div class="news-title-small">
						<h2 style="margin-bottom:0.5rem;">News</h2>
					</div>
					<div class="news-paragraphDiv shadow">
						Welcome to Unity Sound's website. Here you will find everything you need to know about us. We will continuously provide free and updated reggae content (audio, video, articles).<br/>
						Enjoy your visit and keep in touch!
					</div>
				</div>
				<div class="news-innerDiv">
					<div class="news-title-small">
						<h2 style="margin-bottom:0.5rem;">About Us</h2>
					</div>
					<div class="news-paragraphDiv shadow">Unity Sound is a reggae sound system based in Geneva, Switzerland. The purpose of the sound is to bring all people together, no matter what their skin colour, gender or religion, simply through the power of music. Unity is the sound for one and for all...
						<a href="?id=info" title="More Info">Read more</a>
					</div>
				</div>
				<div class="news-innerDiv">
					<div class="news-title-small">
						<h2 style="margin-bottom:0.5rem;">Web Radio</h2>
					</div>
					<div class="news-paragraphDiv shadow">Unity Sound Station is a monthly live internet radio. Click on the
						<a href="?id=video" title="Unity Sound Station">video</a>
						section to find all the latest episodes.
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
