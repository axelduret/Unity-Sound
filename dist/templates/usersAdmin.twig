<div>
	<table class="table table-dark m-0 p-0">
		<thead class="badge-danger">
			<tr>
				<th scope="col" style="width:41px" class="text-center text-light">#</th>
				<th scope="col" style="width:auto;" class="text-light">Username</th>
				<th scope="col" style="width:240px;" class="text-light">Email</th>
				<th scope="col" style="width:120px;" class="text-light">Registered</th>
				<th scope="col" style="width:75px;" class="text-light">Active</th>
				<th scope="col" style="width:90px;" class="text-light">Role</th>
				<th scope="col" style="width:52px" class="table-active">Edit</th>
				<th scope="col" style="width:52px" class="table-active">Del</th>
				<th scope="col" style="width:0.5rem; padding:0; margin:0;" class="table-active"></th>
			</tr>
		</thead>
	</table>
</div>
<div style=" overflow:scroll; overflow-x:hidden; max-height:415px;">
	<table class="table table-striped table-dark">
		<tbody>
			{% for user in users %}
				<tr>
					<td style="width:41px">{{user.id}}</td>
					<td style="width:auto;">{{user.username}}</td>
					<td style="width:240px;">{{user.email}}</td>
					<td style="width:120px;">{{convertDate(user.confirmed_at)}}</td>
					<td style="width:75px;">
						{% if user.confirmation_token != null %}No
							{% else %}Yes
						{% endif %}
					</td>
					<td style="width:90px;">
						{% if user.role == '1' %}Admin
							{% elseif user.role == '2' %}Editor
							{% else %}No role
						{% endif %}
					</td>
					<td class="text-center table-active tdEdit" title="Modifier" style="width:52px; cursor:pointer;">
						<i class="fas fa-edit"></i>
					</td>
					<td class="text-center table-active tdDelete" title="Supprimer" style="width:52px; cursor:pointer;">
						<i class="fas fa-trash-alt"></i>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</th></tr></thead></div>
